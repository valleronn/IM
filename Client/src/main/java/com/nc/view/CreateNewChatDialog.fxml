<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nc.view.CreateNewChatDialog">
    <children>
      <TextField fx:id="chatNameTextField" promptText="Chat name" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="10.0" />
        <CheckListView fx:id="contactsList" prefHeight="400.0" prefWidth="400.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="50.0" />
        <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="5.0">
            <children>
            <Label fx:id="warningLabel" text="Check your input" textFill="#e40a0a" visible="false">
               <HBox.margin>
                  <Insets right="20.0" top="5.0" />
               </HBox.margin>
            </Label>
                <Button mnemonicParsing="false" onAction="#addContactsToChat" text="Add" />
                <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
